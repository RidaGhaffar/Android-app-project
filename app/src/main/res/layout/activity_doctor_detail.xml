<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEFE0"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Heading -->
    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Doctor's Detail"
        android:layout_marginTop="25dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Doctor Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#A7C1A8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Jane Smith"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#819A91"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvSpecialization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialization: Cardiology"
                android:textSize="16sp"
                android:textColor="#555555" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Remove Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRemove"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Doctor"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:backgroundTint="#819A91"
        android:textColor="#EEEFE0" />

</LinearLayout>
